    "yarn": "1.22.19"
  },
  "dependencies": {
    "@slack/bolt": "^3.13.0",
    "@slack/web-api": "^6.8.1",
    "blessed": "^0.1.81",
    "chalk": "^5.2.0",
    "discord.js": "^14.9.0",
    "nopt": "^7.1.0",
