{
  "name": "ebozz",
  "version": "1.0.0-alpha.16",
  "description": "",
  "type": "module",
  "bin": {
    "ebozz": "dist/console.js",
    "ebozz-slack": "dist/slack.js"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier -w package.json src/**",
    "lint": "eslint src/**",
    "ebozz": "node dist/console",
    "slackbot": "node dist/slack",
    "fetch-games": "curl https://eblong.com/infocom/allgamefiles.zip -o allgamefiles.zip && unzip allgamefiles.zip && rm allgamefiles.zip",
    "hhg": "node dist/console --screen blessed gamefiles/hitchhiker-r59-s851108.z3",
    "lgp": "node dist/console --screen blessed gamefiles/leathergoddesses-r0-sXXXXXX.z3",
    "spellbreaker": "node dist/console --screen blessed gamefiles/spellbreaker-r87-s860904.z3",
    "stationfall": "node dist/console --screen blessed gamefiles/stationfall-r107-s870430.z3",
    "trinity": "node dist/console --screen blessed gamefiles/trinity-r15-s870628.z4",
    "wishbringer": "node dist/console --screen blessed gamefiles/wishbringer-r69-s850920.z3",
    "zork1": "node dist/console --screen blessed gamefiles/zork1-r119-s880429.z3",
    "zork2": "node dist/console --screen blessed gamefiles/zork2-r63-s860811.z3",
    "zork3": "node dist/console --screen blessed gamefiles/zork3-r25-s860811.z3",
    "test-zork1": "node dist/test-runner.js gamefiles/zork1-r119-s880429.z3 tests/zork1.walkthrough",
    "test-zork3": "node dist/test-runner.js gamefiles/zork3-r25-s860811.z3 tests/zork3.walkthrough",
    "test-wishbringer": "node dist/test-runner.js gamefiles/wishbringer-r69-s850920.z3 tests/wishbringer.walkthrough",
    "test-hhg": "node dist/test-runner.js gamefiles/hitchhiker-r59-s851108.z3 tests/hitchhikers-guide.walkthrough",
    "ziptest-r3": "node dist/console gamefiles/ziptest-r40-s840613.z3",
    "ziptest-r6y": "node dist/console gamefiles/ziptest-r12-s890607.z6",
    "ziptest-r6z": "node dist/console gamefiles/ziptest-r13-s890619.z6"
  },
  "author": "Chris Toshok <toshok@toshokelectic.com> (https://blog.toshokelectric.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/toshok/ebozz"
  },
  "volta": {
    "node": "19.8.1",
    "yarn": "1.22.19"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.2.0",
    "nopt": "^7.1.0",
    "readline-sync": "^1.4.10",
    "slackbots": "^1.3.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.21",
    "@types/chalk": "^2.2.0",
    "@types/node": "^18.15.11",
    "@types/nopt": "^3.0.29",
    "@types/readline-sync": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@3.5.0"
